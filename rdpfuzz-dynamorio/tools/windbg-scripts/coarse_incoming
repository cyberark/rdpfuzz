$$ list coarse unit incoming links, including expanding fine lists

$$ usage: store unit's incoming field into t0:
$$ r $t0 = 27ece6a8

.for (r $t1 = @$t0; @$t1 != 0; ) {
    ? @$t1;
    dt -b dynamorio!_coarse_incoming_t @$t1;
    .if (poi(@$t1+4)=0) {
        .echo "expanding fine";
        .for (r $t2 = poi(@$t1); @$t2 != 0; ) {
            ? @$t2;
            dt -b _common_direct_linkstub_t @$t2;
            r $t2 = poi(@$t2+4);
        }
        .echo "done expanding";
        .echo ""
    }
    r $t1 = poi(@$t1+8);
}
